                pause
                ""
                Write-Host -ForegroundColor Yellow "Setting `$DelUser"
                ""
                Write-Host -ForegroundColor Green "Running cmdlet:"
                Write-Host -ForegroundColor Cyan "`$DelUser = Get-MsolUser -UserPrincipalName $userA -ReturnDeletedUsers"
